
<section class="jumbotron text-center" style="background-color: #eee;">
    <div class="container">
        <h1 class="jumbotron-heading">Articles</h1>
     </div>
     Our blog has <%= Article.public_count %> articles and counting!
     <% if user_signed_in? %>
      <div class="text-center">
  <%= link_to "New Article", new_article_path , :class =>"btn btn-primary btn-lg"%>
   </div>
   <%end%>
</section>
<section style="background-color: #eee;">


  <div class="container py-5">
    <div class="row">
    <% @articles.each do |article| %>
     <% unless article.archived? %>
      <div class="col-md-12 col-lg-4 mb-4 mb-lg-0">
        <div class="card">
          <div class="d-flex justify-content-between p-3">
            <h3><%= link_to article.title, article, :class =>"nav-link" %></h3>
            
          </div>
          <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/4.webp"
            class="card-img-top" alt="Laptop" />
          <div class="card-body">
            

            <div class="d-flex justify-content-between mb-3">
              <h5 class="mb-0"><%= link_to article.body, article ,:class =>"nav-link" %></h5>
            
            </div>

            <div class="d-flex justify-content-between mb-2">
              <p class="text-muted mb-0">Comments: <span class="fw-bold"><%=article.comments.count%></span></p>
             
            </div>
          </div>
        </div>
      </div>
        <% end %>
        <% end %>
    </div>
  </div>
 
</section>


